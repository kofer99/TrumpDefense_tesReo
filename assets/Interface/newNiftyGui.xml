<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="mygame.HUD">
        <layer id="layer" childLayout="center">
            <panel width="20%" height="100%" backgroundColor="#44ff" align="right" childLayout="center">
                <image align="center" valign="center" width="100%" height="100%" filename="Interface/muricaflag.png"></image>
                <panel width="20%" height="20%" backgroundColor="#0000" align="center" childLayout="center">
                    <image align="center" valign="center" filename="Interface/bigredbutton.png"></image>
                    <control name="button" label="Big red button" id="red" align="center" valign="center"
                        visibleToMouse="true" childLayout="center"> 
                        <interact onClick="red()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
